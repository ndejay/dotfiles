# esac

##############
# Protection #
##############

alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

###########
# History #
###########

# export HISTFILE=~/.histfile
export HISTFILESIZE=1000000
export HISTSIZE=1000000
export SAVEHIST=1000000
export HISTCONTROL=ignoreups
export HISTIGNORE='l'

