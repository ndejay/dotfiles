[include]
  path = ~/.gitconfig.local
[core]
  editor = vim
  pager = less
[help]
  autocorrect = 1
[color]
  ui = true
[push]
  default = matching
[init]
  templatedir = ~/.git_template
[alias]
  ctags = !.git/hooks/ctags
  lg = log --graph
  bvv = branch -vv
[diff]
  tool = vimdiff
  submodule = log
[difftool]
  prompt = false
[status]
  submodulesummary = 1
